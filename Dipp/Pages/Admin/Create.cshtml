@page
@model Dipp.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Создание нового пользователя";
}

<div class="container py-4">
    <!-- Хлебные крошки -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Пользователи</a></li>
            <li class="breadcrumb-item active" aria-current="page">Создание пользователя</li>
        </ol>
    </nav>

    <!-- Заголовок страницы -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-person-plus-fill me-2"></i>Создание нового пользователя
        </h2>
    </div>

    <!-- Карточка с формой -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="card-title mb-0">Введите данные пользователя</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row g-3">
                    <!-- Полное имя -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewUser.FullName" class="form-control" placeholder="Иванов Иван Иванович" />
                            <label asp-for="NewUser.FullName" class="form-label">ФИО</label>
                            <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Логин -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewUser.Login" class="form-control" placeholder="username" />
                            <label asp-for="NewUser.Login" class="form-label">Логин</label>
                            <span asp-validation-for="NewUser.Login" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewUser.Email" class="form-control" placeholder="example@mail.ru" />
                            <label asp-for="NewUser.Email" class="form-label">Email</label>
                            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewUser.PlainPassword" class="form-control" type="password" placeholder="Пароль" />
                            <label asp-for="NewUser.PlainPassword" class="form-label">Пароль</label>
                            <span asp-validation-for="NewUser.PlainPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Телефон -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewUser.Phone" class="form-control" placeholder="phone" />
                            <label asp-for="NewUser.Phone" class="form-label">Номер телефона</label>
                            <span asp-validation-for="NewUser.Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Роль -->
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select asp-for="NewUser.Role" class="form-select" aria-label="Выберите роль">
                                <option value="" selected disabled>Выберите роль пользователя</option>
                                <option>Администратор</option>
                                <option>Диспетчер</option>
                                <option>Машинист</option>
                                <option>Гость</option>
                                <option>Логист</option>
                                <option>Грузоотправитель</option>
                                <option>Менеджер</option>
                            </select>
                            <label asp-for="NewUser.Role" class="form-label">Роль пользователя</label>
                            <span asp-validation-for="NewUser.Role" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Кнопки действий -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Отмена
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-person-plus me-1"></i>Создать пользователя
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Добавляем Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}