<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ЖД-Перевозки</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header class="border-bottom shadow-sm sticky-top bg-white">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-train-front me-2 text-primary" style="font-size: 1.5rem;"></i>
                    <span class="fw-bold text-primary">ЖД-Перевозки</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Calculate">Рассчитать стоимость</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Orders">Мои заказы</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <p class="btn align-items-center text-dark mb-0 me-3 text-primary">@User.Identity.Name</p>
                            <form method="post" action="/Account/Logout">
                                <button type="submit" class="btn btn-link text-dark text-decoration-none">Выход</button>
                            </form>
                        }
                        else
                        {
                            <a href="/Account/Login" class="btn btn-link text-dark text-decoration-none">Вход</a>
                            <a href="/Account/Register" class="btn btn-primary ms-2">Регистрация</a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-5">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-train-front me-2 text-primary" style="font-size: 1.5rem;"></i>
                        <span class="fs-4 fw-bold text-white">ЖД-Перевозки</span>
                    </div>
                    <p class="mb-3">
                        Надежные железнодорожные грузоперевозки по всей стране. Более 15 лет опыта в логистике.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-secondary hover-text-white">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="text-secondary hover-text-white">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="text-secondary hover-text-white">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <h5 class="text-white mb-3">Быстрые ссылки</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/" class="text-secondary text-decoration-none hover-text-white">Главная</a></li>
                        <li class="mb-2"><a href="/About" class="text-secondary text-decoration-none hover-text-white">О компании</a></li>
                        <li class="mb-2"><a href="/Services" class="text-secondary text-decoration-none hover-text-white">Услуги</a></li>
                        <li class="mb-2"><a href="/Calculate" class="text-secondary text-decoration-none hover-text-white">Рассчитать стоимость</a></li>
                        <li class="mb-2"><a href="/Orders" class="text-secondary text-decoration-none hover-text-white">Мои заказы</a></li>
                        <li class="mb-2"><a href="/Contact" class="text-secondary text-decoration-none hover-text-white">Контакты</a></li>
                    </ul>
                </div>

                <!-- Services -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <h5 class="text-white mb-3">Услуги</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/Services/Container" class="text-secondary text-decoration-none hover-text-white">Контейнерные перевозки</a></li>
                        <li class="mb-2"><a href="/Services/Bulk" class="text-secondary text-decoration-none hover-text-white">Перевозка сборных грузов</a></li>
                        <li class="mb-2"><a href="/Services/Express" class="text-secondary text-decoration-none hover-text-white">Экспресс-доставка</a></li>
                        <li class="mb-2"><a href="/Services/Insurance" class="text-secondary text-decoration-none hover-text-white">Страхование грузов</a></li>
                        <li class="mb-2"><a href="/Services/Tracking" class="text-secondary text-decoration-none hover-text-white">Отслеживание груза</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <h5 class="text-white mb-3">Контакты</h5>
                    <ul class="list-unstyled">
                        <li class="d-flex mb-3">
                            <i class="bi bi-geo-alt text-primary me-2 mt-1"></i>
                            <span>ул. Железнодорожная, 123, г. Москва, 123456</span>
                        </li>
                        <li class="d-flex mb-3">
                            <i class="bi bi-telephone text-primary me-2 mt-1"></i>
                            <span>+7 (123) 456-78-90</span>
                        </li>
                        <li class="d-flex mb-3">
                            <i class="bi bi-envelope text-primary me-2 mt-1"></i>
                            <span>info@railway-freight.ru</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="border-top border-secondary mt-4 pt-4 text-center">
                <p>© @DateTime.Now.Year ЖД-Перевозки. Все права защищены.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>